@{
    var brand = "Claim-SM";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @brand</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="app-bg">
    <header class="nav">
        <div class="nav-left">
            <span class="brand">@brand</span>
        </div>
        <nav class="nav-links">
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
               href="@Url.Action("Home", "Home")">Home</a>
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Claims" && ViewContext.RouteData.Values["action"]?.ToString() == "New" ? "active" : "")"
               href="@Url.Action("New", "Claims")">➕ New Claim</a>
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Claims" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
               href="@Url.Action("Index", "Claims")">View Claims</a>
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Track" ? "active" : "")"
               href="@Url.Action("Index", "Track")">Track Claim</a>
            <a class="@(ViewContext.RouteData.Values["action"]?.ToString() == "PreApprove" ? "active" : "")"
               href="@Url.Action("PreApprove", "Approval")">Pre Approve</a>
            <a class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Approve" ? "active" : "")"
               href="@Url.Action("Approve", "Approval")">Approve</a>
        </nav>

        <div class="nav-right">
            <a class="pill" href="@Url.Action("Login", "Account")">Sign out</a>
        </div>
    </header>

    <main class="container">
        @RenderBody()
    </main>
</body>
</html>
